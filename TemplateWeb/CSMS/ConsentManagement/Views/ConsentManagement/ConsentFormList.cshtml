    function ShowConsentDetail(consent_form_id) {

        $.post('ShowConsentDetailPartial', { consent_form_id: consent_form_id }, function (data) {
            $("#ShowConsentDetailPartial").html(data);
            $('#ShowConsentDetailModal').modal('show');
        });

    }

</script>