

@{
    ViewData["Title"] = "Index";
}

<!-- Begin Page Content -->
<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">USER MANAGEMENT</h1>
        @*<a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>*@
    </div>
    @*<h3 class="h3 mb-2 text-gray-800">Tables</h3>*@
    @*<p class="mb-4">
        <a href="@Url.Action("index", "Home")">Home</a> ->
        <a href="@Url.Action("index", "Users")">Users</a>
    </p>*@

    <a href="@Url.Action("create", "Users")" class="btn btn-info btn-icon-split">
        <span class="icon text-white-50">
            <i class="fas fa-plus-circle"></i>
        </span>

        <span class="text" style="color:aliceblue">Add New User</span>
    </a>
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800"></h1>
    <p class="mb-4">@*DataTables is a third party plugin that is used to generate the demo table below. For more information about DataTables, please visit the <a target="_blank" href="https://datatables.net">official DataTables documentation</a>.*@</p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Users List</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Username</th>
                            <th>Role</th>
                            <th>Create </th>
                            <th>Last Login</th>
                            <th>Use Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    @*<tfoot>
                        <tr>
                            <th>Product ID</th>
                            <th>Product Name</th>
                            <th>Current Status</th>
                            <th>Owner</th>
                            <th>Last Update</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>*@
                    <tbody>
                        @{
                            if (ViewBag.Users != null)
                            {
                                foreach (var x in ViewBag.Users)
                                {
                                    <tr id="@x.ID">
                                        <td style="text-align:left">@x.ID</td>
                                        <td style="text-align:left">@x.Username </td>
                                        <td style="text-align:left">@x.Role </td>
                                        <td style="text-align:center">@x.CreateDate</td>
                                        <td style="text-align:center">@x.LastLogin</td>
                                        <td style="text-align:center">@x.Status</td>
                                        @*<td style="text-align:right">@x.Volume.ToString("#,##0")</td>
                                            <td style="text-align:right">@x.AvgPrice.ToString("#,##0.000000")</td>*@
                                        <td style="text-align:center"><button @*onclick="ShowSummaryDetail('@x.ID');"*@ style="" type="button" class="btn btn-default btn-sm" id="btnDetail" name="btnDetail" value="">Detail</button></td>
                                    </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
